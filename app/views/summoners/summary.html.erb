<%- model_class = Summoner -%>
<div class="page-header">
	<h1><%=t '.title', :default => model_class.model_name.human.titleize %>: <%= @summoner.name %></h1>
</div>

<p>Select game type:&nbsp;
<% @stats.each do |item| %>
	<a href="#<%= item.player_stat_summary_type %>"><%= item.player_stat_summary_type %></a> &middot;&nbsp; 
<% end %>
</p>
<hr />
<% @stats.each do |item| %>
	<h3><a name="<%= item.player_stat_summary_type %>"><%= item.player_stat_summary_type %> (<%= item.wins %> Wins)</a></h3>
	<br />
	<table  class="table table-striped">
		<thead>
			<tr>
				<th>Category</th>
				<th>Result</th>
			</tr>
		</thead>
		<tbody>
		<% methods = item.aggregated_stats.public_methods %>
		<% methods.each do |method| %>
			<% if (method.to_s.include? "max") || 
					(method.to_s.include? "min") || 
					(method.to_s.include? "average") || 
					(method.to_s.include? "total")
				%>
			<% unless method.to_s.include? "=" %>
				<% statitem = item.aggregated_stats.send(method.to_sym) %>
				<% unless statitem.to_s.empty? %>
					<tr>
						<td><%= method.to_s %></td>
						<td><%= item.aggregated_stats.send(method.to_sym) %></td>
					</tr>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
	</tbody>
</table>
<p class="text-right"<small>last update: <%= Time.at(item.modify_date / 1000) %></span></p>
<hr />
<br />
<% end %>

<div class="form-actions">
	<%= link_to t('.back', :default => t("helpers.links.back")), summoners_path, :class => 'btn btn-default'  %>
</div>
