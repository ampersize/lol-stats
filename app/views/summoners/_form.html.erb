<%= form_for @summoner, :html => { :class => "form-horizontal summoner" } do |f| %>

  <% if @summoner.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@summoner.errors.count, "error") %> prohibited this summoner from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @summoner.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :region, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%=  f.select :region, options_for_select(%w[euw br eune kr lan las na oce ru tr]), :class => 'collection_select' %>
    </div>
    <%=f.error_span(:region) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        summoners_path, :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
